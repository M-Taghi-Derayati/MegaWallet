<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- پر کردن شفاف با گرادیان عمودی -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp"/>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/kraken_glass_fill_top"
                android:endColor="@color/kraken_glass_fill_bottom"/>
        </shape>
    </item>

    <!-- هاله نرم برای حس شیشه -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp"/>
            <gradient
                android:type="radial"
                android:centerX="0.7"
                android:centerY="0.3"
                android:gradientRadius="220dp"
                android:startColor="#1AFFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>
</layer-list>