<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <!-- بخش دارایی ارسالی -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <!-- ... (ImageView و TextView برای آیکون و نام SOL) ... -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="end">
            <TextView
                android:id="@+id/tv_confirm_amount_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:text="-0.000891"/>
            <TextView
                android:id="@+id/tv_confirm_usd_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8A8A9E"
                android:textSize="14sp"
                tools:text="-$0.18"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- ... (بخش دارایی دریافتی مشابه بالا) ... -->

    <!-- بخش جزئیات -->
    <LinearLayout
        android:id="@+id/layout_confirm_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
        <!-- ردیف‌های Swap rate, Transaction fees و ... -->
    </LinearLayout>

    <!-- دکمه‌های اقدام -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#8A8A9E"
            app:strokeColor="#8A8A9E"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_final"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Confirm"
            app:backgroundTint="#7047FF"
            app:cornerRadius="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>