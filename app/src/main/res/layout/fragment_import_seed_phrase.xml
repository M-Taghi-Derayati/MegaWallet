<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <!-- Toolbar و عنوان -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:navigationIconTint="@color/text_primary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        style="@style/textViewRegular2"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="بررسی کلمات بازیابی/کلید خصوصی"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_dec"
        android:layout_width="0dp"
        style="@style/textViewRegular2"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="لطفا کلید خصوصی و یا کلمات بازیابی را جهت افزودن کیف پول وارد کنید"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_manage_keys"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dec">


        <View
            android:id="@+id/v_select_menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@drawable/bg_txt_glass_base"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/g_left_strategic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_left_strategic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_menu_words"
            style="@style/textViewRegular2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="12/24 کلمه بازیابی"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/g_left_strategic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_menu_seed_pharse"
            style="@style/textViewRegular2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="کلید خصوصی"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/g_left_strategic"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- کادر اصلی برای نمایش چیپ‌ها و گرفتن ورودی -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_input_area"
        android:layout_width="0dp"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        app:cardBackgroundColor="@color/surface_1"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cons_manage_keys"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="1dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_seed_pharse"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/_150sdp"
            android:hint="کلید بازیابی"
            android:background="@null"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:minWidth="@dimen/_80sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:singleLine="false"
            android:lines="8"
            android:gravity="center|start"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="@dimen/_10ssp"
            app:layout_wrapBefore="false" />


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexbox_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexWrap="wrap">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_next_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_kraken_glass_base"
                android:hint="1."
                android:layout_marginTop="@dimen/_9sdp"
                android:minWidth="@dimen/_80sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:singleLine="true"
                android:gravity="center|start"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="@dimen/_10ssp"
                app:layout_wrapBefore="false" />

        </com.google.android.flexbox.FlexboxLayout>


        <TextView
            android:id="@+id/btn_paste"
            android:layout_width="wrap_content"
            style="@style/textViewRegular1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:padding="16dp"
            android:text="جایگذاری"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- دکمه اصلی Import -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_import"
        style="@style/KrakenButton.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:enabled="false"

        android:text="بازیابی کیف پول"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>