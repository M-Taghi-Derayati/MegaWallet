<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.swap.SwapFragment">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="?attr/actionBarSize"
        app:title="تبدیل"
        android:layout_marginTop="@dimen/_10sdp"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:navigationIconTint="@color/text_primary"
        app:titleCentered="true"
        app:titleTextColor="@color/text_primary" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#2A2A4A"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_amount_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textColorHint="#8A8A9E"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_asset_from"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_amount_usd_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8A8A9E"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_amount_from"
                tools:text="$0.18" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_asset_from"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="انتخاب ارز پرداختی"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_amount_from" />

            <TextView
                android:id="@+id/tv_balance_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8A8A9E"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_asset_from"
                tools:text="Balance: 0.000891 SOL" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_swap_direction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toTopOf="@id/card_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_from" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#2A2A4A"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_from">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_amount_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:hint="0.0"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textColorHint="#8A8A9E"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_asset_to"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_amount_usd_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8A8A9E"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_amount_to"
                tools:text="$0.18" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_asset_to"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="انتخاب ارز دریافتی"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_amount_to" />

            <TextView
                android:id="@+id/tv_balance_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8A8A9E"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_asset_to"
                tools:text="Balance: 0 USDT" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@+id/btn_swap_action"
        app:layout_constraintEnd_toEndOf="@id/card_to"
        app:layout_constraintStart_toStartOf="@id/card_to"
        app:layout_constraintTop_toBottomOf="@id/card_to">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_quote_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/textViewRegular2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="نرخ اختلاف"
                    android:textColor="#8A8A9E" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_slip_page"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:text="1 - 2 %"
                    android:textColor="@android:color/white" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/CircularDeterminateProgressBar"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:max="30"
                    android:progress="0"
                    android:rotation="-90"
                    tools:progress="60" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/textViewRegular2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="نام صرافی"
                    android:textColor="#8A8A9E" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exchange"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    tools:text="Intex" />
            </RelativeLayout>


            <!-- نرخ تبدیل -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/textViewRegular2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="نرخ تبدیل"
                    android:textColor="#8A8A9E" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_rate"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    tools:text="1 ETH ≈ 4300.00 USDT" />
            </RelativeLayout>

            <!-- کارمزد پردازش (صرافی + ما) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/textViewRegular2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="کارمزد پردازش"
                    android:textColor="#8A8A9E" />

                <TextView
                    android:id="@+id/tv_processing_fee"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    tools:text="0.1308 USDT" />
            </RelativeLayout>

            <!-- عنوان لیست شبکه‌های دریافت -->
            <TextView
                android:id="@+id/tv_network_options_title"
                style="@style/textViewRegular2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="انتخاب شبکه دریافت"
                android:textColor="#8A8A9E" />

            <!-- RecyclerView برای نمایش گزینه‌های دریافت -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_receiving_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/list_item_network_option" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


    <!-- دکمه اصلی -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_swap_action"
        style="@style/KrakenButton.Primary"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:text="تبدیل"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>