<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@+id/btn_swap_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_quote_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/textViewRegular2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="نرخ اختلاف"
                    android:textColor="#8A8A9E" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_slip_page"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="1 - 2 %"
                    android:textColor="@android:color/white" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/textViewRegular2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="نام صرافی"
                    android:textColor="#8A8A9E" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exchange"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    tools:text="Intex" />
            </RelativeLayout>


            <!-- نرخ تبدیل -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/textViewRegular2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="نرخ تبدیل"
                    android:textColor="#8A8A9E" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_rate"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    tools:text="1 ETH ≈ 4300.00 USDT" />
            </RelativeLayout>

            <!-- کارمزد پردازش (صرافی + ما) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/textViewRegular2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="کارمزد پردازش"
                    android:textColor="#8A8A9E" />

                <TextView
                    android:id="@+id/tv_processing_fee"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    tools:text="0.1308 USDT" />
            </RelativeLayout>

            <!-- عنوان لیست شبکه‌های دریافت -->
            <TextView
                android:id="@+id/tv_network_options_title"
                style="@style/textViewRegular2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="انتخاب شبکه دریافت"
                android:textColor="#8A8A9E" />

            <!-- RecyclerView برای نمایش گزینه‌های دریافت -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_receiving_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/list_item_network_option" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


    <!-- دکمه اصلی -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_swap_action"
        style="@style/KrakenButton.Primary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:text="تبدیل"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.appcompat.widget.LinearLayoutCompat>